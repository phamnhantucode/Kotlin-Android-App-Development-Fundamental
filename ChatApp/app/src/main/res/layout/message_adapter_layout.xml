<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/messagePartner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:text="This is partner text message"
        android:background="@drawable/round_back_50_white"
        android:elevation="5dp"
        android:layout_marginStart="5dp"
        android:paddingVertical="10dp"
        android:paddingHorizontal="20dp"
        />

    <TextView
        android:id="@+id/messageUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="5dp"
        android:text="This is user text message"
        android:textColor="@color/white"
        android:background="@drawable/round_back_50_blue"
        android:elevation="5dp"
        android:paddingVertical="10dp"
        android:paddingHorizontal="20dp"
        />
</RelativeLayout>